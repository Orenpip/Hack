{
  "manifest_version": 3,
  "name": "Canvas Career & Academic Manager",
  "version": "3.0",
  "description": "View Canvas grades, manage career preferences, upload documents, and export academic data to CSV.",
  "permissions": ["storage", "scripting", "activeTab", "downloads"],
  "host_permissions": ["https://canvas.its.virginia.edu/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Canvas Extension"
  },
  "content_scripts": [
    {
      "matches": ["https://canvas.its.virginia.edu/*"],
      "js": ["content.js"]
    }
  ]
}
